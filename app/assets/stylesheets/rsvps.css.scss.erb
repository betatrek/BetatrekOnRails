@import "base";

// Background image used on the invitation page
.dotStockGraphBackground {
	background: url(<%= asset_data_uri 'getInvitedBackground.jpg' %>) no-repeat;
	// Dimensions of the image
	width: 1200px;
	height: 794px;
	position: relative;
}

#invitationFormMod {
	position: absolute;
	left: 460px;
	top: 217px;
	width: 255px;
	input {
		
		&:valid, &:invalid {
			background-color: inherit;
		}
	}
}

#invitationInputField {
	text-shadow: 0 1px 0 #333;
	color: #fff;
	width: 175px;
	border: solid 1px #2a58b6;
	padding: 4px 10px;
}

#invitationButton {
	color: #141414;
	font-size: 15px;
	border: none;
	line-height: 1;
	padding: 8px 3px 6px;
	margin-left: 6px;
	&:hover {
		color: $betatrek_blue;
	}
	&:active {
		@include linear-gradient(top, #e5e5e5 0%,#808080 100%);
	}
}